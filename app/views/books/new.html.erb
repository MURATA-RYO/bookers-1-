<h1>Books</h1>
  <% if @book.errors.any? %>
      <h2><%= @book.errors.count %>errors</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      
  <% end %>

<h2>New book</h2>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>本のタイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Box' %>
<% end %>